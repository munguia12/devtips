<p id="notice"><%= notice %></p>

<h1 class="center">Productos</h1>
  

  <div class="row center-xs">
    <div class="col-xs-8">
        <table>
  <thead>
    <tr>
      <th>Articulos</th>
      <th>Existencia</th>
      <th>Stockmin</th>
      <th>Stockmax</th>
      <th>Disponibles</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="grupcenter">
    <% @productos.each do |producto| %>
      <tr>
        <td><%= producto.articulos %></td>
        <td><%= producto.existencia %></td>
        <td><%= producto.stockmin %></td>
        <td><%= producto.stockmax %></td>
        <td>
          <%= producto.disponibles %>
        </td>
        <% if current_user%>
        <td><%= link_to 'Ver', producto %></td>
        <td><%= link_to 'Editar', edit_producto_path(producto) %></td>
        <td><%= link_to 'Destruir', producto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
                  <% if current_user %>
                    <div class="button">
                        <%= link_to 'Nuevo Producto', new_producto_path %>
                    </div> 
                <% else %>
                   
                <% end %>
    </div>
</div>



